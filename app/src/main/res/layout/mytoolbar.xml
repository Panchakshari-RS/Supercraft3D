<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/message_relativeLayout"
        >
        <LinearLayout
            android:id="@+id/message_back_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/messageback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:scaleType="fitXY"
                android:rotation="180"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/job_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/message_back_lyt"
            >
            <RelativeLayout
                android:id="@+id/job_id_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/job_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trova"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="opensans"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/supercraft_logo"
                    android:layout_width="155dp"
                    android:layout_height="40dp"
                    android:src="@drawable/supercraft"
                    android:background="@color/white"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/patient_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+919731096012"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/job_id"
                    android:fontFamily="opensans"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <!--TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trova"
                android:textSize="18dp"
                android:layout_below="@+id/job_id_lyt"
                android:textColor="#ffffff"
                android:fontFamily="opensans"
                /-->
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
