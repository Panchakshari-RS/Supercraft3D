<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/mytoolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="25dp"
                android:src="@drawable/patient"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/patient_name"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="25dp"
                android:text="Panchakshari Ramaiah Sreenivasa Murthy"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="25dp"
                android:src="@drawable/hospital"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="0dp"
                android:layout_weight="2.8"
                android:layout_height="25dp"
                android:text="Hospital"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="25dp"
                android:src="@drawable/home"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/city_name"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="25dp"
                android:text="Bangalore"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/documents"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:fillViewport="true"
                    >
                    <LinearLayout
                        android:id="@+id/dicom_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dicom Files"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="opensans"
                            />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="25dp"
                android:src="@drawable/warning"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/priority"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="25dp"
                android:text="Non Critical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="25dp"
                android:src="@drawable/notes"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <EditText
                android:id="@+id/dicom_notes"
                android:layout_width="0dp"
                android:layout_weight="4.65"
                android:layout_height="115dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:maxLines="20"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="16sp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:gravity="top|left"
                android:fontFamily="opensans"
                android:background="@drawable/border"
                />

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/mytoolbar"/>

</LinearLayout>